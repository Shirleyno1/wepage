<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">
<LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rv_studio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/page_left_right_padding"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_subscrib_logo"
        android:layout_width="wrap_content"
        android:minWidth="70dp"
        android:layout_height="70dp"
        android:scaleType="fitStart"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/tv_subscribe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/iv_subscrib_logo"
            android:text=""
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
     <TextView
         android:layout_width="23dp"
         android:layout_height="23dp"
         android:layout_toRightOf="@+id/iv_subscrib_logo"
         android:layout_marginLeft="-12dp"
         android:layout_marginTop="0dp"
         android:gravity="center"
         android:background="@drawable/item_num"
         android:textSize="12sp"
         android:textColor="@android:color/white"
         android:text="99+"
         android:visibility="gone"
         android:id="@+id/tv_num"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_item1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@android:color/white">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="165dp"
          android:scaleType="centerCrop"
          android:id="@+id/iv_item1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:background="#50000000"
          android:padding="@dimen/page_left_right_margin"
          android:textColor="@android:color/white"
          android:text=""
          android:layout_alignParentBottom="true"
          android:id="@+id/tv_item1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/page_left_right_padding"
        android:paddingRight="@dimen/page_left_right_padding"
        android:paddingTop="@dimen/page_left_right_margin"
        android:clickable="true"
        android:background="@android:color/white"
        android:id="@+id/ll_item2">
        <ImageView
            android:id="@+id/iv_item2"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:scaleType="fitStart"/>

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/page_left_right_margin"
            android:text=""
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/iv_item2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/page_left_right_padding"
        android:paddingRight="@dimen/page_left_right_padding"
        android:background="@android:color/white"
        android:id="@+id/ll_item3">
        <ImageView
            android:id="@+id/iv_item3"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/page_left_right_margin"
            android:text=""
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/iv_item3"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>