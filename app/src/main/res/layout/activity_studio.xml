<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_container"
    android:layout_below="@id/toolbar_index"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:background="@color/background">
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:collapsedTitleGravity="center"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_marginTop="@dimen/page_left_right_margin"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_scrollFlags="scroll|enterAlways"
                android:background="@drawable/logo"
                app:layout_collapseMode="parallax">
                <com.joooonho.SelectableRoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:sriv_border_width="2dip"
                    app:sriv_border_color="#008fea"
                    app:sriv_oval="true"
                    android:id="@+id/iv_studio_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="65dp"
                    app:type="circle"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_studio_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    app:layout_collapseMode="parallax"
                    android:textColor="@color/white"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:paddingRight="@dimen/activity_vertical_margin12"
                    android:paddingLeft="@dimen/activity_vertical_margin12"
                    android:paddingBottom="@dimen/studio_item_margin"
                    android:text=""/>
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_studio"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <!--<com.balysv.materialripple.MaterialRippleLayout-->
                    <!--android:id="@+id/back"-->
                    <!--android:layout_width="55dp"-->
                    <!--android:layout_height="55dp"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--rv_centered="true">-->
                <!--<TextView-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_width="12dp"-->
                    <!--android:layout_height="19dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@drawable/back_selector"-->
                    <!--android:text=""/>-->
                <!--</com.balysv.materialripple.MaterialRippleLayout>-->
                <TextView
                    android:id="@+id/back"
                    android:layout_width="12dp"
                    android:layout_height="19dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_selector"
                    android:text=""/>
                <CheckBox
                    android:id="@+id/bt_subscribe"
                    android:layout_width="46dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/page_left_right_padding"
                    android:button="@null"
                    android:gravity="center|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right"
                    android:background="@drawable/bt_subscribe_selector1"
                    android:textColor="@color/white"
                    android:text="订阅"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="always"
        app:layout_scrollFlags="scroll"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_studio_newslist"
            android:background="@color/white"
            android:clipToPadding="true"
            android:paddingBottom="@dimen/activity_vertical_margin12"
            android:overScrollMode="always"
            android:overScrollFooter="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!--<com.jude.easyrecyclerview.EasyRecyclerView-->
        <!--android:id="@+id/rv_studio_newslist"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:recyclerClipToPadding="true"-->
        <!--android:overScrollMode="always"-->
        <!--app:layout_progress="@layout/dialog_loading_indicator"-->
        <!--/>-->
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.SwipeRefreshLayout>