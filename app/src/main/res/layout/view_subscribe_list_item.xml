<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:padding="@dimen/activity_vertical_margin12"
   android:layout_marginBottom="@dimen/page_left_right_padding"
   android:background="@color/white">
   <ImageView
      android:id="@+id/iv_item_logo2"
      android:layout_width="105dp"
      android:layout_height="95dp"
      android:layout_centerVertical="true"
      android:gravity="center_vertical"
      android:scaleType="fitStart"/>
    <CheckBox
        android:id="@+id/bt_subscribe"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:button="@null"
        android:gravity="center|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bt_subscribe_selector"
        android:textColor="@drawable/text_color_selector"
        android:text="@string/subscribe"/>
   <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/page_left_right_margin"
        android:textColor="@color/text_color"
        android:layout_toRightOf="@id/iv_item_logo2"
        android:layout_toLeftOf="@id/bt_subscribe"
        android:textSize="18sp"
        android:text="智勇新闻"/>

    <TextView
      android:id="@+id/tv_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:paddingLeft="@dimen/page_left_right_margin"
      android:paddingRight="@dimen/page_left_right_padding"
      android:paddingBottom="@dimen/page_left_right_margin"
      android:layout_toLeftOf="@id/bt_subscribe"
      android:text=""
      android:textColor="@color/text_color"
      android:layout_below="@id/tv_title"
      android:layout_toRightOf="@id/iv_item_logo2"/>
    <TextView
        android:layout_below="@id/tv_content"
        android:visibility="gone"
        android:layout_toRightOf="@id/iv_item_logo2"
        android:paddingLeft="@dimen/page_left_right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="123456人订阅"/>
</RelativeLayout>
