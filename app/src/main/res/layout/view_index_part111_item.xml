<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginRight="@dimen/margin14"
    android:layout_marginLeft="@dimen/margin14"
    android:layout_marginTop="@dimen/activity_vertical_margin12"
    android:layout_marginBottom="@dimen/margin3"
    android:paddingLeft="@dimen/margin14"
    android:paddingRight="@dimen/margin14"
    android:paddingTop="@dimen/margin14">
<LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_item1"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:paddingLeft="@dimen/activity_vertical_margin12"
        android:paddingRight="@dimen/activity_vertical_margin12"
        android:paddingTop="@dimen/activity_vertical_margin12"
        android:background="@android:color/white">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="212dp"
          android:scaleType="centerCrop"
          android:id="@+id/iv_item1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="54dp"
          android:textSize="16sp"
          android:background="#50000000"
          android:padding="@dimen/page_left_right_margin"
          android:textColor="@android:color/white"
          android:text=""
          android:gravity="center_vertical"
          android:layout_alignParentBottom="true"
          android:id="@+id/tv_item1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin12"
        android:paddingRight="@dimen/activity_vertical_margin12"
        android:paddingTop="@dimen/activity_vertical_margin12"
        android:paddingBottom="@dimen/activity_vertical_margin12"
        android:clickable="true"
        android:background="@android:color/white"
        android:id="@+id/ll_item2">
        <ImageView
            android:id="@+id/iv_item2"
            android:layout_width="66dp"
            android:layout_height="45dp"
            android:scaleType="fitStart"/>

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="@dimen/page_left_right_margin"
            android:text=""
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/iv_item2"/>
    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin12"
        android:layout_marginRight="@dimen/activity_vertical_margin12"
        android:background="@color/line_color"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin12"
        android:paddingRight="@dimen/activity_vertical_margin12"
        android:paddingTop="@dimen/activity_vertical_margin12"
        android:paddingBottom="@dimen/activity_vertical_margin12"
        android:background="@android:color/white"
        android:id="@+id/ll_item3">
        <ImageView
            android:id="@+id/iv_item3"
            android:layout_width="66dp"
            android:layout_height="45dp"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="@dimen/page_left_right_margin"
            android:text=""
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/iv_item3"/>
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>
    <RelativeLayout
        android:id="@+id/rv_studio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_vertical_margin12"
        android:paddingLeft="@dimen/margin3"
        android:background="@color/white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_subscrib_logo"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="50dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/tv_subscribe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/iv_subscrib_logo"
            android:text=""
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:text="@string/more_artcles"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>