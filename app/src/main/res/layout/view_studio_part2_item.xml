<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin14"
        android:paddingRight="@dimen/margin14"
        android:paddingTop="@dimen/activity_vertical_margin12"
        android:paddingBottom="@dimen/activity_vertical_margin12"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_item_logo2"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="@dimen/page_left_right_margin"
            android:paddingTop="@dimen/page_left_right_margin"
            android:paddingBottom="@dimen/page_left_right_margin"
            android:text=""
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/iv_item_logo2"
            android:id="@+id/tv_article_title"/>
    </RelativeLayout>
